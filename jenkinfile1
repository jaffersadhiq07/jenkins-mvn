pipeline {
    agent any 
    stages {
        stage ("1. install ansible pkg") {
            steps {
                sh "amazon-linux-extras install -y ansible2"
                sh "mkdir -p inbound"
                sh "mkdir -p outbound"
            }
        }
         stage ("2. service install") {
            steps {
                sh "yum update -y"
                sh "yum install -y httpd"
            }
        }
        stage ("2. service start") {
            steps {
                sh "systemctl restart httpd"
                sh "systemctl enable httpd"
            }
        }
        stage ("3. ansible") {
            steps {
                sh "ansible --version"
                sh "rpm -qa | grep ansible"
            }
        }
        stage ("4. create file") {
            steps {
                sh "echo test.txt"
                sh "date"
                sh "cal"
            }
        }
        stage ("5. create file") {
            steps {
                sh "echo test1.txt"
                sh "date"
                sh "cal"
            }
        }
        stage "8. get inside folder"{
		steps{
    		    sh "cd /var/www/html/"
    		    writeFile(file: "/var/www/html/index.html", text: "this test data and test website", encoding: "UTF-8") 
	 }
}
}
}
